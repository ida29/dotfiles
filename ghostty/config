# シェル
command = /opt/homebrew/bin/fish

# フォント
font-size = 14

# テーマ（tmuxの黒背景ベースに合わせて catppuccin-mocha を維持）
theme = Catppuccin Mocha

# カーソル（tmuxの vi mode に合わせてブロックカーソル）
cursor-style = block
cursor-style-blink = false

# ウィンドウ
window-decoration = true
window-padding-x = 8
window-padding-y = 8
macos-titlebar-style = transparent
macos-option-as-alt = true
background-opacity = 0.7

# クリップボード（tmuxの copy-pipe 設定に合わせてクリップボード連携）
clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard

# マウス（tmuxで mouse on にしているため）
mouse-scroll-multiplier = 3

# シェル統合
shell-integration = detect
shell-integration-features = cursor,sudo,title

# キーバインド - tmux の prefix (Ctrl-a) に合わせた操作体系
# ペイン分割: tmux の | と - に対応
keybind = ctrl+a>shift+backslash=new_split:right
keybind = ctrl+a>minus=new_split:down

# ペイン移動: tmux の h/j/k/l に対応
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>l=goto_split:right

# 新しいタブ: tmux の c に対応
keybind = ctrl+a>c=new_tab

# タブ移動: tmux の n/p に対応
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

# ペインを閉じる
keybind = ctrl+a>x=close_surface

# 設定リロード: tmux の r に対応
keybind = ctrl+a>r=reload_config
